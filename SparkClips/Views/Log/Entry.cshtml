@{
    ViewData["Title"] = "New Entry";
}
@section Styles {
    <link rel="stylesheet" href="~/css/entry.css" />
}
<h2>@ViewData["Title"].</h2>



<div class="list-group">
    <form method="post" enctype="multipart/form-data" asp-controller="Log" asp-action="ProcessEntry">
        <div class="form-group">
            <div class="col-md-10">
                <p>Description:</p>
                <input type="text" name="Description"/> <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Cost:</p>
                <input type="number" name="Cost"/> <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Timestamp:</p>
                <input type="date" name="DateTimeCreated"/> <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Location:</p>
                <input type="text" name="Location"/> <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Barber/s:</p>
                <input type="text" name="Barbers"/> <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input type="file" name="files" multiple />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>