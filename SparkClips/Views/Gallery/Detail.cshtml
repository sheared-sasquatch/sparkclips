@model SparkClips.Models.HairyDatabase.GalleryEntry
@{
    ViewData["Title"] = "Gallery detail";
}
@section Styles {
    <link rel="stylesheet" href="~/css/gallery-detail.css" />
}


<h2>@Html.DisplayFor(model => model.Title)</h2>

@foreach (var image in Model.Images)
{
    <img src="@Html.DisplayFor(x =>image.Image.Url)" />
}


<dl class="dl-horizontal">
    <!-- Tags -->
    <dt>
        Characteristics
    </dt>
    <dd>
        <div id="chars">
        @foreach(var GalleryEntry_Tag in Model.Tags) {
            <div class="tag">(@GalleryEntry_Tag.Tag.Name)</div>
        }
        </ul>
    </dd>
    <!-- Description and instructions -->
    <dt>
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Instructions)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Instructions)
    </dd>
</dl>